{
  "name": "Pinger",
  "productName": "Pinger",
  "version": "1.0.0",
  "description": "Check if your systems are reachable.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-lnx": "electron-packager . --overwrite --platform=linux --prune=true --out=release-builds --icon=assets/img/logo.icns",
    "build-win": "electron-packager . --overwrite --platform=win32 --prune=true --out=release-builds --icon=assets/img/logo.icns",
    "build-mac": "electron-packager . --overwrite --platform=darwin --prune=true --out=release-builds --icon=assets/img/logo.icns",
    "build-all": "electron-packager . --overwrite --all --prune=true --out=release-builds --icon=assets/img/logo.icns"
  },
  "repository": "https://github.com/git-yuritancredi/Pinger",
  "keywords": [
    "Pinger",
    "check",
    "systems"
  ],
  "author": "Yuri Tancredi",
  "license": "GNU GPL v3",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-packager": "^15.0.0",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "cron": "^1.4.1",
    "electron-online": "^1.0.0",
    "express": "^4.16.3",
    "glob": "^7.1.3",
    "is-reachable": "^4.0.0",
    "ping": "^0.2.2",
    "xml2js": "^0.4.19",
    "xmlbuilder": "^15.1.1"
  }
}
